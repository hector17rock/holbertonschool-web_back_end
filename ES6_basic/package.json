{
  "name": "es6_basic",
  "version": "1.0.0",
  "description": "Holberton School - ES6 basic exercises",
  "type": "module",
  "main": "0-constants.js",
  "scripts": {
    "dev": "node",
    "test": "jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "jest": {
    "transform": {
      "^.+\\.[tj]sx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": { "node": "20" }
              }
            ]
          ]
        }
      ]
    },
    "testEnvironment": "node",
    "moduleFileExtensions": ["js", "mjs", "cjs", "json"],
    "roots": ["."],
    "verbose": false
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0"
  }
}

